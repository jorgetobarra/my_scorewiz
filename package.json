{
    "name": "my_score_wizard",
    "version": "1.0.0",
    "private": true,
    "dependencies": {
        "@electron/remote": "^2.0.8",
        "@emotion/react": "^11.8.1",
        "@emotion/styled": "^11.8.1",
        "@mui/icons-material": "^5.6.0",
        "@mui/material": "^5.5.0",
        "@mui/styles": "^5.6.2",
        "electron-is-dev": "^2.0.0",
        "faker": "^6.6.6",
        "file-saver": "^2.0.5",
        "prop-types": "^15.8.1",
        "react": "^17.0.2",
        "react-beautiful-dnd": "^13.1.0",
        "react-canvas-confetti": "^2.0.7",
        "react-dom": "^17.0.2",
        "react-router-dom": "^5.3.0",
        "react-scripts": "5.0.0",
        "react-transition-group": "^4.4.2",
        "sheetjs-style": "^0.15.8",
        "web-vitals": "^2.1.4",
        "xlsx-js-style": "^1.2.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.16.2",
        "@testing-library/react": "^12.1.3",
        "@testing-library/user-event": "^13.5.0",
        "@types/file-saver": "^2.0.7",
        "@types/node": "^24.10.1",
        "@types/react": "^17.0.90",
        "@types/react-beautiful-dnd": "^13.1.2",
        "@types/react-dom": "^17.0.26",
        "@types/react-router-dom": "^5.3.3",
        "@types/react-transition-group": "^4.4.12",
        "concurrently": "^5.3.0",
        "cross-env": "^7.0.3",
        "electron": "^21.0.0",
        "electron-builder": "^23.3.3",
        "eslint": "^8.10.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-react": "^7.29.3",
        "eslint-plugin-react-hooks": "^4.3.0",
        "prettier": "^2.2.1",
        "typescript": "~4.9.0",
        "wait-on": "^5.2.1"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "electron:serve": "concurrently -k \"cross-env BROWSER=none npm run start\" \"npm run electron:start\"",
        "electron:build": "npm run build && electron-builder -c.extraMetadata.main=build/main.js",
        "electron:build:mac": "npm run build && electron-builder --mac -c.extraMetadata.main=build/main.js",
        "electron:build:win": "npm run build && electron-builder --win -c.extraMetadata.main=build/main.js",
        "electron:build:linux": "npm run build && electron-builder --linux -c.extraMetadata.main=build/main.js",
        "electron:start": "wait-on tcp:3000 && electron ."
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ],
        "rules": {
            "react/jsx-filename-extension": "on",
            "import/no-unresolved": "on",
            "import/extensions": "on",
            "no-undef": 1,
            "max-len": 1,
            "react/require-default-props": "on"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "main": "public/main.js",
    "homepage": "./",
    "author": "Jorge Tobarra",
    "description": "App for creating the votes of your own contest",
    "build": {
        "extends": null,
        "appId": "com.jorgetobarra.electron-my_scorewiz",
        "productName": "My Score Wizard",
        "directories": {
            "buildResources": "assets"
        },
        "executableName": "My Score Wizard",
        "icon": "./public/icons/logo512.ico",
        "mac": {
            "icon": "./public/icons/logoMacOS.icns",
            "category": "public.app-category.utilities",
            "target": ["zip"]
        },
        "dmg": {
            "backgroundColor": "#DCDCDC",
            "title": "My Score Wizard DMG"
        },
        "win": {
            "icon": "./public/icons/logo512.ico"
        }
    }
}
